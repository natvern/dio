maybecrash :- nextPos(X,Y), nextObs(X,Y).

% Consider L the 'safe' zone where we consider the agent to be close to goal
P :: close :- nextPos(X,Y), goal(I,J), 
            time(T),
            L is abs(I-X) + abs(Y-J), P is 1 / (L+1).

T :: timetaken :- time(X), max_steps(N), 
                  T is X / N.

query(maybecrash).
query(close).
query(timetaken).
